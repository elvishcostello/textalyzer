# Gutendex Docker Configuration
# Copy this file to .env and customize as needed

# PostgreSQL password (used by both db and gutendex services)
POSTGRES_PASSWORD=gutendex

# Django secret key (generate a long random string for production)
SECRET_KEY=change-me-in-production-use-long-random-string

# Debug mode (set to false in production)
DEBUG=false

# Allowed hosts (comma-separated list of domains/IPs)
ALLOWED_HOSTS=localhost,127.0.0.1

# Port to expose gutendex on the host
GUTENDEX_PORT=8000

# Set to true on first run to download and populate the Project Gutenberg catalog
# This takes several minutes - only needed once
UPDATE_CATALOG=false

# Email configuration (optional)
EMAIL_HOST=localhost
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_HOST_ADDRESS=noreply@localhost
